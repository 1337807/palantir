<%= content_for(:header) do %>
  <%= javascript_include_tag 'welcome' %>
<% end %>

<div class='row'>
  <div>
    <div id="image" class="well"></div>
  </div>
</div>

<div class='row'>
  <div id='events' class='col-md-4'>
    <h2>Events</h2>
    <% @events.each do |event| %>
      <div class='well event'>
        <%= link_to(event_url(event)) do %>
          <h4><%= "#{l(local_time(event.created_at), format: :month_day_year_time)}" %></h4>
          <%= image_tag(event.image.url, class: 'thumbnail') if event.image %>
        <% end %>
      </div>
    <% end %>
  </div>

  <%= render 'shared/images' %>
</div>
